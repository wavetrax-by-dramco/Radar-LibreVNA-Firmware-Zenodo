[Unit]
Description=LibreVNA Service
After=network.target

[Service]
ExecStart=/home/pi/LibreVNA-GUI --port 1234 --no-gui -platform vnc
#ExecStart=/home/pi/LibreVNA-GUI --port 1234
WorkingDirectory=/home/pi
Restart=always
RestartSec=30
User=pi
Environment=QT_QPA_PLATFORM=vnc:size=1920x1080
Environment=DISPLAY=:0

[Install]
WantedBy=multi-user.target

